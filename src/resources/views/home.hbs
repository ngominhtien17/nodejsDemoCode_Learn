<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card" style="width: 18rem; margin-top: 16px;">
                <a href="/coures/{{this.slug}}">
                    <img src="{{this.img}}" class="card-img-top" alt="Card iamge cap">
                </a>
            <div class="card-body">
                <a href="/coures/{{this.slug}}">
                    <h5 class="card-title">{{this.name}}</h5>
                </a>
                <p class="card-text">{{this.description}}</p>
                <a href="#" class="btn btn-primary">Buy Course</a>
            </div>
        </div>
        </div>
        {{/each}}
    </div>
</div>